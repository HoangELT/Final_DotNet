@{
    var totalitemCart = ViewBag.TotalitemCart;
    bool islogin = ViewBag.isLogin;
    bool isAdmin = ViewBag.isAdmin;
}
@model List<Category>
<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn d-flex align-items-center justify-content-between" style="height: 65px; padding: 0 30px;">
                <form action="/Product/Search" method="post">
                    <div class="input-group">
                        <input type="text" name="keywords" class="form-control" placeholder="Search for products">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <button type="submit" class="fa fa-search"></button>
                            </span>
                        </div>
                    </div>
                </form>
            </a>
        </div>
        <div class="col-lg-8">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                <a href="/Home/Index" class="text-decoration-none d-block d-lg-none">
                    <span class="h1 text-uppercase text-dark bg-light px-2">ELECTRIC</span>
                    <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">STORE</span>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" style="position: relative;left: 80px;" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="/Home/Index" class="nav-item nav-link active">Home</a>
                        <div class="nav-item dropdown">
                            <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown">Categories <i class="fa fa-angle-down mt-1"></i></a>
                            <div class="dropdown-menu bg-primary rounded-0 border-0 m-0">
                                @if (Model != null)
                                {
                                    @foreach (var i in Model)
                                    {
                                        <a href="/Product/FilterCategory?CategoryId=@i.CategoryId" class="dropdown-item">@i.Name</a>
                                    }
                                }
                            </div>
                        </div>
                        <a href="/Product/AllProduct" class="nav-item nav-link">Shop</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                        <div class="btn-group">
                            <i class="fa fa-user text-primary dropdown-toggle" data-toggle="dropdown"></i>
                            @if (islogin && isAdmin)
                            {
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="/Account/Information" class="dropdown-item">Information</a>
                                    <a href="/Cart/OrderResult" class="dropdown-item">Order</a>
                                    <a href="/Admin/Index" class="dropdown-item">Admin Dashboard</a>
                                    <a href="/Account/Logout" class="dropdown-item">Logout</a>
                                </div>
                            }
                            else if (islogin && !isAdmin)
                            {
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="/Account/Information" class="dropdown-item">Information</a>
                                    <a href="/Cart/OrderDetail" class="dropdown-item">Order</a>
                                    <a href="/Account/Logout" class="dropdown-item">Logout</a>
                                </div>
                            }
                            else
                            {
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="/Account/Login" class="dropdown-item">Login</a>
                                    <a href="/Account/Register" class="dropdown-item">Register</a>
                                </div>
                            }
                        </div>
                        <a href="/Cart/Index" class="btn px-0 ml-3">
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">@totalitemCart</span>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
<!-- Navbar End -->
