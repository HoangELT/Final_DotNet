@{
    ViewData["Title"] = "Send Email";
    Layout = "~/Views/Shared/Layout_Index/_Layout_Index.cshtml";
}
<h2 style="text-align:center; padding:40px">SEND EMAIL</h2>
<div class="container" style="display: flex;justify-content: space-evenly;flex-wrap: nowrap;flex-direction: row;align-content: stretch;align-items: stretch;">
    <div class="content">
        <form action="/Account/SendEmail" method="post">
            <div>
                <table class="table table-light table-borderless">
                    <tr>
                        <th>Email</th>
                        <td>
                            <div class="input-box">
                                <input type="text" name="email" style="width:250px;" required placeholder="Please enter your email">
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="button" style="text-align: center;">
                <input type="submit" value="SEND" style="padding: 10px 20px; background-color: burlywood; border: none;">
            </div>
        </form>
    </div>
</div>