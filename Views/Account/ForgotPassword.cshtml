@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/Layout_Index/_Layout_Index.cshtml";
}
 <h2 style="text-align:center; padding:40px">FORGOT PASSWORD</h2>
    <div class="container" style="display: flex;justify-content: space-evenly;flex-wrap: nowrap;flex-direction: row;align-content: stretch;align-items: stretch;">
        <div class="content">
            <form action="/Account/ForgotPassword" method="post">
            <input type="hidden" name="userid" value="@TempData["userId"]">
                <div>
                    <table class="table table-light table-borderless">
                        <tr>
                            <th>New Password</th>
                            <td>
                                <div class="input-box">
                                    <input type="text" name="password" style="width:250px;" required placeholder="Please enter your new password">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th>Confirm Password</th>
                            <td>
                                <div class="input-box">
                                    <input type="text" name="Cpassword" style="width:250px;" required placeholder="Please enter confirm password">
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="button" style="text-align: center;">
                    <input type="submit" value="CHANGE" style="padding: 10px 20px; background-color: burlywood; border: none;">
                </div>
            </form>
        </div>
    </div>}