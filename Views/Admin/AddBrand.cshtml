@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/Layout_Admin/_Layout_Admin.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>ADD NEW BRAND</h4>
                </div>
                <div class="card-body">
                    <form action="/Admin/AddBrand" method="POST" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="brandId">
                                <label for=""><b>Brand Name</b></label>
                                <input type="text" id="full-name" required name="brand_name" placeholder="Please enter category name" class="form-control">
                            </div>
                            <div class="col-md-12">
                                <br>
                                <button type="submit" class="btn btn-primary" name="add_category_btn">ADD</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
