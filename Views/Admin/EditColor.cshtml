@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/Layout_Admin/_Layout_Admin.cshtml";
}
@model Color
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>EDIT Color</h4>
                </div>
                <div class="card-body">
                    <form action="/Admin/EditColor" method="POST" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="colorId" value="@Model.ColorId">
                                <label for=""><b>Brand Name</b></label>
                                <input type="text" id="full-name" required value="@Model.Name" name="color_name" placeholder="Please enter color name" class="form-control">
                            </div>
                            <input type="hidden" name="add_brand_btn" value="true">
                            <div class="col-md-12">
                                <br>
                                <button type="submit" class="btn btn-primary">UPDATE</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
